<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:alpha="0.2">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/app_logo"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:orientation="vertical"
                android:paddingLeft="13dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onDrawerBackClick"
                    android:src="@drawable/ic_back_arrow"
                    android:tint="@color/colorWhite" />

                <TextView
                    android:id="@+id/appNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Smile \u0026 Delite"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorWhite"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/emailTv"
                    android:text="email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/mobileNumTv"
                    android:text="9921538083"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/drawer_border" />

            <LinearLayout
                android:id="@+id/conainer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/drawerHomeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/clickable_trans_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onDrawerMenuClick"
                    android:padding="13dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/raleway_medium"
                        android:paddingLeft="10dp"
                        android:text="Home"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/drawerMyProfileLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clickable_trans_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onDrawerMenuClick"
                    android:padding="13dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/raleway_medium"
                        android:paddingLeft="10dp"
                        android:text="My Profile"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/drawerReportLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clickable_trans_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="13dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/raleway_medium"
                        android:paddingLeft="10dp"
                        android:text="View Report"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/drawerNotificationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onDrawerMenuClick"
                    android:padding="13dp"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/raleway_medium"
                        android:paddingLeft="10dp"
                        android:text="Notification"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/drawerSyncNowLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onDrawerMenuClick"
                    android:padding="13dp"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/raleway_medium"
                        android:paddingLeft="10dp"
                        android:text="Sync now"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/drawerAboutApplayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clickable_trans_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onDrawerMenuClick"
                    android:padding="13dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/raleway_medium"
                        android:paddingLeft="10dp"
                        android:text="About App"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/drawerSettingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onDrawerMenuClick"
                    android:padding="13dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/raleway_medium"
                        android:paddingLeft="10dp"
                        android:text="Settings"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/drawerContactLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clickable_trans_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onDrawerMenuClick"
                    android:padding="13dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/raleway_medium"
                        android:paddingLeft="10dp"
                        android:text="Contact Us"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/drawerPrivacyPolicyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clickable_trans_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onDrawerMenuClick"
                    android:padding="13dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/raleway_medium"
                        android:paddingLeft="10dp"
                        android:text="Privacy Policy"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/drawerLogoutLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/clickable_trans_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onDrawerMenuClick"
                    android:orientation="vertical"
                    android:padding="13dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/ic_logout"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/raleway_medium"
                        android:paddingLeft="10dp"
                        android:text="Logout"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:onClick="onDrawerMenuClick"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/versionTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/raleway_medium"
                        android:text="V-1.0"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
